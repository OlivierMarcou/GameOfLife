       <Button fx:id="playBtn" ellipsisString="Play" mnemonicParsing="false" onAction="#playAction" text="" GridPane.columnIndex="2" GridPane.columnSpan="1" GridPane.rowIndex="0" GridPane.rowSpan="1" >
