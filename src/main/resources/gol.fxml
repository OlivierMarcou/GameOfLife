<GridPane alignment="center" hgap="10" minHeight="200.0" minWidth="400.0" prefHeight="-Infinity" prefWidth="-Infinity" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.arkaine.game.ControllerGol">
   <children>
       <GameCanvas fx:id="gameofLife" onMouseClicked="#clickCanvas" pickOnBounds="true" BorderPane.alignment="TOP_LEFT" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1" GridPane.valignment="CENTER" />
